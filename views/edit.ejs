<% include partials/header %>

<div class="ui main text container segment">
	<h2 class="ui center aligned icon header">
  <i class="pencil alternate icon"></i>
  Edit Blog
</h2>
		<form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method = "POST">
			<div class="field">
				<label>TITLE</label>
				<input type="text" name="blog[title]"   value="<%= blogs.title %>">	
			</div>
		
			<div class="field">
				<label>IMAGE</label>
				<input type="text" name="blog[image]"  value="<%= blogs.image %>">
			</div>
		
			<div class="field">
				<label>Blog Content</label>
				<textarea name="blog[body]">  <%= blogs.body %></textarea>
			</div>
			
			<button type="submit" class="ui green big basic button">
				Submit
			</button>
		</form>
</div>

<% include partials/footer %>